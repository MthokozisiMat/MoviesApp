@model System.Data.DataTable
@{
    ViewBag.Title = "Movies";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Movie Name</th>
        <th>Release Year</th>
        <th>Genre</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit", "Movie", new {@id = @Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Movie", new {@id = @Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Movie")">Add Movie</a>

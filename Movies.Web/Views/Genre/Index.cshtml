@model System.Data.DataTable
@{
    ViewBag.Title = "Genres";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Genre ID</th>
        <th>Genre Name</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>
                <a href="@Url.Action("Edit", "Genre", new {@id = @Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Genre", new {@id = @Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Genre")">Add Genre</a>

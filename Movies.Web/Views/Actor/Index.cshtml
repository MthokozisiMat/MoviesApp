@model System.Data.DataTable
@{
    ViewBag.Title = "Actors";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Actor Name</th>
        <th>Date of Birth</th>
        <th>Action</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>
                <a href="@Url.Action("Edit", "Actor", new {@id = @Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete", "Actor", new {@id = @Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Actor")">Add Actor</a>
